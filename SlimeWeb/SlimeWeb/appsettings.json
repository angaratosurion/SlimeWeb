  "ApppSettings": {
    "DefaultRoot": {
      "Controller": "Blogs",
      "Action": "Index"
    },
    "DataBaseCreation": true,
    "DataBaseMigration": true,
    "ForceErrorShowing": true,
    "PathBase": "/SlimeWeb",
    "HostedInSubFolder": true,
    "AllowDirectoryBrowse": true,
    "EnableFileServer": true,
