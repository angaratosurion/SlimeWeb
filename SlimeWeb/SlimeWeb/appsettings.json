    "DBEngine": "MSQLServer",
    /* values: MSQLServer , MySQl */
    "firstRun": true,
    "AdminUserName": "admin@localhost.com",
    "AdminUserPassword": "@Dm1n@"


  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "./wwwroot/AppData/logs/nlog-${shortdate}.log",
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            {
              "name": "timestamp",
              "layout": "${date:format=o}"
            },
            {
              "name": "level",
              "layout": "${level}"
            },
            {
              "name": "logger",
              "layout": "${logger}"
            },
            {
              "name": "message",
              "layout": "${message:raw=true}"
            },
            {
              "name": "properties",
              "encode": false,
              "layout": {
                "type": "JsonLayout",
                "includeallproperties": "true"
              }
            }
          ]
        }
      },
        "logconsole": {
          "type": "Console"
        }
      },
      "rules": [
        {
          "logger": "*",
          "minLevel": "Info",
          "writeTo": "logconsole"
        },
        {
          "logger": "*",
          "minLevel": "Debug",
          "writeTo": "logfile"
        }

      ]
    }

