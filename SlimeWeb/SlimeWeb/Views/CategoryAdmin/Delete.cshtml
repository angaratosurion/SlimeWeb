@model SlimeWeb.Core.Data.ViewModels.ViewCategory

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BlogName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BlogName)
        
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" asp-route-id="@Model.Id" asp-route-blogname="@Model.BlogName" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.BlogName">Back to List</a>
    </form>
</div>